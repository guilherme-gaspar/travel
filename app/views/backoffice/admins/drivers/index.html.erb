
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Motoristas</h3>
    <div class="pull-right">
      <%= link_to new_backoffice_admins_driver_path, class: "btn btn-success" do %>
         <i class="fa fa-save"></i>  Novo motorista
      <% end %>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 10px">#</th>
          <th>Nome</th>
          <th>Email</th>
          <th style="width: 150px"></th>
        </tr>
        <% @drivers.each do |driver| %>
        <tr>
          <td><%= driver.id %></td>
          <td><%= driver.name %></td>
          <td><%= driver.email %></td>
          <td>
            <button type="button" class="btn btn-primary"><i class="fa fa-envelope"></i></button>
            <%= link_to edit_backoffice_admins_driver_path(driver), class: "btn btn-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to backoffice_admins_driver_path(driver), method: :delete, class: "btn btn-danger", data: {confirm: "Você tem certeza que deseja o excluir o usuário <b>#{driver.name}</b>?" } do %>
              <i class="fa fa-ban"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
      <%= paginate @drivers %>
    </ul>
  </div>
</div>
