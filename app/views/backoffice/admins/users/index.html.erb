
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Usuários</h3>
    <div class="pull-right">
      <%= link_to new_backoffice_admins_user_path, class: "btn btn-success" do %>
         <i class="fa fa-save"></i>  Novo usuário
      <% end %>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 10px">#</th>
          <th>Nome</th>
          <th>Telefone</th>
          <th>E-mail</th>
          <th>Universidade</th>
          <th style="width: 100px"></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= user.university.name %></td>
          <td>
            <%= link_to edit_backoffice_admins_user_path(user), class: "btn btn-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to backoffice_admins_user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "Você tem certeza que deseja o excluir o usuário <b>#{user.name}</b>?" } do %>
              <i class="fa fa-ban"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
      <%= paginate @users %>
    </ul>
  </div>
</div>
