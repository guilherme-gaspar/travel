  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <b><% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %></b>
    </div>
  <% end %>

<%= form_for([:backoffice, :admins, @user]) do |f| %>
<div class="box box-info">

  <div class="box-header with-border">
    <h3 class="box-title"><%= action_message %></h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->

    <div class="box-body">

      <div class="form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, class:"form-control", placeholder: "Nome completo do usuário" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :email %>
        <%= f.text_field :email, class:"form-control", placeholder: "Email do usuário" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :password %>
        <%= f.text_field :password, class:"form-control", placeholder: "Password do usuário" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation, class:"form-control", placeholder: "Confirmação de senha" %>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :phone %>
        <%= f.text_field :phone, class:"form-control", placeholder: "Telefone", :data => { :mask => '(99) 99999-9999' } %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :street %>
        <%= f.text_field :street, class:"form-control", placeholder: "Rua/Av" %>
      </div>

      <div class="form-group col-md-2">
        <%= f.label :city %>
        <%= f.text_field :city, class:"form-control", placeholder: "Cidade" %>
      </div>

      <div class="form-group col-md-2">
        <%= f.label :number %>
        <%= f.text_field :number, class:"form-control", placeholder: "Número" %>
      </div>

      <div class="form-group col-md-2">
        <%= f.label :state %>
        <%= f.text_field :state, class:"form-control", :data => {:mask=> 'aa'}, placeholder: "Estado" %>
      </div>

      <%= f.fields_for :contract do |ff| %>

        <div class="form-group col-md-4">
          <%= ff.label :due_date %>
          <%= ff.text_field :due_date, class:"form-control", placeholder: "Data de vencimento do contrato" %>
        </div>

        <div class="form-group col-md-4">
          <%= ff.label :value %>
          <%= ff.text_field :value, class:"form-control", placeholder: "Valor total" %>
        </div>

        <div class="form-group col-md-4">
          <%= ff.label :number_installments %>
          <%= ff.text_field :number_installments, class:"form-control", :data => {:mask=> '99'}, placeholder: "Número de parcelas" %>
        </div>
      <% end %>

      <div class="form-group col-md-4">
        <%= f.label :university %>
        <%= f.select(:university, University.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
      </div>

      <div class="col-md-12">
        <button type="submit" class="btn btn-primary pull-right">Salvar</button>
      </div>

    </div>

    <!-- /.box-body -->
</div>

<% end %>
