<div class="box">
  <div class="box-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 80px">Fatura #</th>
          <th>Vencimento</th>
          <th style="width: 60px">Status</th>
          <th>Valor</th>
          <th style="width: 50px"></th>
        </tr>
        <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.id %></td>
          <td><%= invoice.due_date.strftime("%d/%m/%Y") %></td>
          <% if invoice.pending? %>
            <td>
              <span class="label label-danger">Pendente</span>
            </td>
          <% elsif invoice.paid? %>
            <td>
              <span class="label label-success">Paga</span>
            </td>
          <% end %>
          <td><%= invoice.value %></td>
          <td>
            <%= link_to 'oi', method: :delete, class: "btn btn-danger", data: {confirm: "VocÃª tem certeza que deseja o excluir o usuÃ¡rio <b></b>?" } do %>
              <i class="fa fa-ban"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">

    </ul>
  </div>
</div>
