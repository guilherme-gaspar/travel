<% if @notification.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b><% @notification.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for([:backoffice, :admins, @notification]) do |f| %>
<div class="nav-tabs-custom">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab_1" data-toggle="tab">Dados da notificação</a></li>
    <li class="pull-right"><button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Salvar</button></a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_1">

          <div class="form-group col-md-4">
            <%= f.label :title %>
            <%= f.text_field :title, class:"form-control", placeholder: "Título da notificação" %>
          </div>

          <div class="form-group col-md-4">
            <%= f.label :university %>
            <%= f.select(:university_id, University.where(admin_id: current_admin.id).collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
          </div>

          <div class="form-group col-md-4">
            <%= f.label :notification_date %>
            <%= f.date_field :notification_date, class:"form-control", placeholder: "Título da notificação" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :description %>
            <%= f.text_area :description, class:"form-control", placeholder: "Descrição da notificação" %>
          </div>
      &nbsp;
    </div>
  </div>
</div>
<% end %>
