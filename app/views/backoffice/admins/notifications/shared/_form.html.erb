<% if @notification.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b><% @notification.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for([:backoffice, :admins, @notification]) do |f| %>
<div class="box box-info">

<div class="box-header with-border">
  <h3 class="box-title"><%= action_message %></h3>
</div>
<!-- /.box-header -->
<!-- form start -->

  <div class="box-body">

    <div class="form-group col-md-4">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control", placeholder: "Título da notificação" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :university %>
      <%= f.select(:university_id, University.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :notification_date %>
      <%= f.date_field :notification_date, class:"form-control", placeholder: "Título da notificação" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :description %>
      <%= f.text_area :description, class:"form-control", placeholder: "Descrição da notificação" %>
    </div>


    <div class="col-md-12">
      <button type="submit" class="btn btn-primary pull-right">Salvar</button>
    </div>

  </div>

  <!-- /.box-body -->
</div>

<% end %>
