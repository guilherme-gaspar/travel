
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Universidades</h3>
    <div class="pull-right">
      <%= link_to new_backoffice_admins_university_path, class: "btn btn-success" do %>
         <i class="fa fa-save"></i>  Nova universidade
      <% end %>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 10px">#</th>
          <th>Nome</th>
          <th>Endereço</th>
          <th style="width: 100px"></th>
        </tr>
        <% @universities.each do |university| %>
        <tr>
          <td><%= university.id %></td>
          <td><%= university.name %></td>
          <td><%= university.address_view %></td>
          <td>
            <%= link_to edit_backoffice_admins_university_path(university), class: "btn btn-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to backoffice_admins_university_path(university), method: :delete, class: "btn btn-danger", data: {confirm: "Você tem certeza que deseja o excluir a universidade <b>#{university.name}</b>?" } do %>
              <i class="fa fa-ban"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
      <%= paginate @universities %>
    </ul>
  </div>
</div>
