<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b><% @admin.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<div class="box box-info">

<div class="box-header with-border">
  <h3 class="box-title">Editando o perfil da empresa</h3>
</div>
<!-- /.box-header -->
<!-- form start -->



<%= form_for(@admin, url: backoffice_admins_profile_path(current_admin.id), html: { multipart: true }) do |f| %>
  <div class="box-body">

    <div class="form-group col-md-4">
      <%= f.label :fantasy_name %>
      <%= f.text_field :fantasy_name, class:"form-control", placeholder: "Nome fantasia", :required => true %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :social_name %>
      <%= f.text_field :social_name, class:"form-control", placeholder: "Razão social" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :cnpj %>
      <%= f.text_field :cnpj, class:"form-control", placeholder: "CNPJ da empresa" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control", placeholder: "Email da empresa" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :phone %>
      <%= f.text_field :phone, class:"form-control", placeholder: "Telefone da empresa" %>
    </div>

    <div class="form-group col-md-5">
      <%= f.label :street %>
      <%= f.text_field :street, class:"form-control", placeholder: "Rua/Av" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :city %>
      <%= f.text_field :city, class:"form-control", placeholder: "Cidade" %>
    </div>
    <div class="form-group col-md-2">
      <%= f.label :number %>
      <%= f.text_field :number, class:"form-control", placeholder: "Número" %>
    </div>
    <div class="form-group col-md-2">
      <%= f.label :state %>
      <%= f.text_field :state, class:"form-control", placeholder: "Estado" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: "btn btn-default btn-file" %>
    </div>





    <div class="col-md-12">
    <button type="submit" class="btn btn-primary pull-right">Salvar</button>
    </div>

  </div>

  <!-- /.box-body -->
<% end %>

</div>
