<% if @fast_travel.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b><% @fast_travel.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for([:backoffice, :admins, @fast_travel]) do |f| %>
  <div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab_1" data-toggle="tab">Dados pessoais</a></li>
      <li><a href="#tab_2" data-toggle="tab">Dados contratais</a></li>
      <li class="pull-right"><button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Salvar</button></a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab_1">
        <div class="form-group col-md-6">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control", placeholder: "Nome do contratente" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :email %>
          <%= f.text_field :email, class:"form-control", placeholder: "Email do contratente" %>
        </div>

        <div class="form-group col-md-12">
          <%= f.label :phone %>
          <%= f.text_field :phone, class:"form-control", placeholder: "Telefone do contratante", :data => { :mask => '(99) 99999-9999' } %>
        </div>
        &nbsp;
      </div>
      <!-- /.tab-pane -->
      <div class="tab-pane" id="tab_2">
        <div class="form-group col-md-4">
          <%= f.label :number_passenger %>
          <%= f.text_field :number_passenger, class:"form-control", placeholder: "Número de passageiros" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :price %>
          <%= f.text_field :price, class:"form-control", placeholder: "Preço total" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :due_date %>
          <%= f.text_field :due_date, class:"form-control", placeholder: "Data de vencimento", data: { mask: '99/99/9999' } %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :inicial_tour %>
          <%= f.text_field :inicial_tour, class:"form-control", placeholder: "Percurso inicial" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :final_tour %>
          <%= f.text_field :final_tour, class:"form-control", placeholder: "Percurso final" %>
        </div>
        &nbsp;
      </div>
    </div>
  </div>
<% end %>
