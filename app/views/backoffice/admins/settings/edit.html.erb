<% if @setting.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b><% @setting.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for(@setting, url: backoffice_admins_setting_path(current_admin.id), html: { multipart: true }) do |f| %>
<div class="nav-tabs-custom">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab_1" data-toggle="tab">Dados de configurações</a></li>
    <li class="pull-right"><button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Salvar</button></a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_1">
      <div class="form-group col-md-6">
        <%= f.label :token %>
        <%= f.text_field :token, class:"form-control", placeholder: "Token" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :origin %>
        <%= f.text_field :origin, class:"form-control", placeholder: "Origem das rotas universitárias" %>
      </div>


      &nbsp;
    </div>

    </div>
  </div>
</div>
<% end %>

</div>
