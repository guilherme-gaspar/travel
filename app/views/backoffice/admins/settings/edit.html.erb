<% if @setting.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b><% @setting.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<div class="box box-info">

<div class="box-header with-border">
  <h3 class="box-title">Configurações gerais</h3>
</div>
<!-- /.box-header -->
<!-- form start -->



<%= form_for(@setting, url: backoffice_admins_setting_path(current_admin.id), html: { multipart: true }) do |f| %>
  <div class="box-body">

    <div class="form-group col-md-6">
      <%= f.label :token %>
      <%= f.text_field :token, class:"form-control", placeholder: "Token", :required => true %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :days_for_payment %>
      <%= f.text_field :days_for_payment, class:"form-control", placeholder: "Dias para carência", :required => true %>
    </div>

    <div class="col-md-12">
    <button type="submit" class="btn btn-primary pull-right">Salvar</button>
    </div>

  </div>

  <!-- /.box-body -->
<% end %>

</div>
