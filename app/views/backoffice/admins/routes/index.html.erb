<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Rotas</h3>
    <div class="pull-right">
      <%= link_to new_backoffice_admins_user_path, class: "btn btn-success" do %>
         <i class="fa fa-save"></i>  Nova rota
      <% end %>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 10px">#</th>
          <th>Nome</th>
          <th>Email</th>
          <th style="width: 150px"></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <button type="button" class="btn btn-primary"><i class="fa fa-envelope"></i></button>
            <%= link_to edit_backoffice_admins_user_path(user), class: "btn btn-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to backoffice_admins_user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "Você tem certeza que deseja o excluir o usuário <b>#{user.name}</b>?" } do %>
              <i class="fa fa-ban"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">

    </ul>
  </div>
</div>

