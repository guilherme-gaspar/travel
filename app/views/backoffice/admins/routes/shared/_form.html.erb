<% if @route.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <b><% @route.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for([:backoffice, :admins, @route]) do |f| %>
<div class="box box-info">

<div class="box-header with-border">
  <h3 class="box-title"><%= action_message %></h3>
</div>
<!-- /.box-header -->
<!-- form start -->

  <div class="box-body">

    <div class="form-group col-md-4">
      <%= f.label :university %>
      <%= f.select(:university_id, University.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :driver %>
      <%= f.select(:driver_id, Driver.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: "form-control") %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :car %>
      <%= f.select(:car_id, Car.all.collect {|p| [ p.plate, p.id ] }, { include_blank: true }, class: "form-control") %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :origin %>
      <%= f.text_field :origin, class:"form-control", placeholder: "Placa do veiculo" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :period_day %>
      <%= f.select :period_day, options_for_select([['Manha', "M"], ['Tarde', "T"], ['Noite', "N"], ['Dia todo', "MTN"]], @route.period_day), { include_blank: true }, { :class => "form-control" } %>
    </div>


    <div class="col-md-12">
      <button type="submit" class="btn btn-primary pull-right">Salvar</button>
    </div>

  </div>

  <!-- /.box-body -->
</div>

<% end %>
