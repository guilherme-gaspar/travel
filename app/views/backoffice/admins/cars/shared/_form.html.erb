<% if @car.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <b><% @car.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for([:backoffice, :admins, @car]) do |f| %>
  <div class="nav-tabs-custom">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab_1" data-toggle="tab">Dados do carro</a></li>
      <li class="pull-right"><button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Salvar</button></a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="tab_1">
        <div class="form-group col-md-6">
          <%= f.label :capacity %>
          <%= f.text_field :capacity, class:"form-control", placeholder: "Capacidade do veiculo" %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :plate %>
          <%= f.text_field :plate, class:"form-control", placeholder: "Placa do veiculo", :data => { :mask => '***/****' } %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :model %>
          <%= f.text_field :model, class:"form-control", placeholder: "Modelo do veiculo" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :year %>
          <%= f.text_field :year, class:"form-control", placeholder: "Ano do veiculo", :data => { :mask => '9999' } %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :mark %>
          <%= f.text_field :mark, class:"form-control", placeholder: "Marca do veiculo" %>
        </div>
        &nbsp;
      </div>
    </div>
  </div>
<% end %>
