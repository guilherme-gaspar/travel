<% if @car.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <b><% @car.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></b>
  </div>
<% end %>

<%= form_for([:backoffice, :admins, @car]) do |f| %>
<div class="box box-info">

<div class="box-header with-border">
  <h3 class="box-title"><%= action_message %></h3>
</div>
<!-- /.box-header -->
<!-- form start -->

  <div class="box-body">

    <div class="form-group col-md-6">
      <%= f.label :capacity %>
      <%= f.text_field :capacity, class:"form-control", placeholder: "Capacidade do veiculo" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :plate %>
      <%= f.text_field :plate, class:"form-control", placeholder: "Placa do veiculo" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :model %>
      <%= f.text_field :model, class:"form-control", placeholder: "Modelo do veiculo" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :year %>
      <%= f.text_field :year, class:"form-control", placeholder: "Ano do veiculo" %>
    </div>

    <div class="form-group col-md-4">
      <%= f.label :mark %>
      <%= f.text_field :mark, class:"form-control", placeholder: "Marca do veiculo" %>
    </div>

    <div class="col-md-12">
      <button type="submit" class="btn btn-primary pull-right">Salvar</button>
    </div>

  </div>

  <!-- /.box-body -->
</div>

<% end %>
