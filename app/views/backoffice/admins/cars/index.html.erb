
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Carros</h3>
    <div class="pull-right">
      <%= link_to new_backoffice_admins_car_path, class: "btn btn-success" do %>
         <i class="fa fa-save"></i>  Novo carro
      <% end %>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width: 10px">#</th>
          <th>Placa</th>
          <th>Modelo</th>
          <th style="width: 150px"></th>
        </tr>
        <% @cars.each do |car| %>
        <tr>
          <td><%= car.id %></td>
          <td><%= car.plate %></td>
          <td><%= car.model %></td>
          <td>
            <button type="button" class="btn btn-primary"><i class="fa fa-envelope"></i></button>
            <%= link_to edit_backoffice_admins_car_path(car), class: "btn btn-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to backoffice_admins_car_path(car), method: :delete, class: "btn btn-danger", data: {confirm: "VocÃª tem certeza que deseja o excluir o carro <b>#{car.plate}</b>?" } do %>
              <i class="fa fa-ban"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody></table>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
      <%= paginate @cars %>
    </ul>
  </div>
</div>
